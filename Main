#include <bitset>
#include <iostream>

int main()
{
	std::cout << "Please enter the text you want to convert." << std::endl;
	std::string input;
	std::cin >> input;

	std::cout << "Your text in binary:" << std::endl;
	
	for (int i = 0; i < input.length(); i++)
	{
		std::cout << std::bitset<8>(input[i]);
		std::cout << " ";
	}
	
}
